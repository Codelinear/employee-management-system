generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Employee {
  id            String   @id @default(uuid()) @map("_id")
  firstName     String
  lastName      String
  email         String   @unique
  assignedEmail String
  phone         String   @unique
  dob           DateTime
  relieved      Boolean  @default(false)
  address       String
  salary        String
  assets        String[]
  increment     Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model CompanyMember {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
